{% if data.vendor.settlementFrequency|default(null) == constant('BitBag\\OpenMarketplace\\Component\\Vendor\\Contracts\\VendorSettlementFrequency::VIRTUAL_WALLET') %}
    <form action="{{ path('open_marketplace_vendor_profit_withdrawal_create', { channelCode: data.channel.code }) }}" method="post">
        <input type="hidden" name="_method" value="POST">
        <div class="ui buttons">
            <button class="ui green labeled icon button" type="submit">
                <i class="icon dollar"></i> {{ action.label|trans }}
            </button>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token(data.id) }}" />
    </form>
{% endif %}
