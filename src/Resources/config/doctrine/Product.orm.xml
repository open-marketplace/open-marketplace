<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="BitBag\OpenMarketplace\Entity\Product" table="sylius_product">

        <field name="deleted" type="boolean"/>

        <many-to-one field="vendor" target-entity="BitBag\OpenMarketplace\Entity\VendorInterface" inversed-by="products">
            <join-column name="vendor_id" on-delete="CASCADE"/>
        </many-to-one>
    </mapped-superclass>
</doctrine-mapping>
