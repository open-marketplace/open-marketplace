<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\ProductListing\ProductListing" table="bitbag_mvm_product_listing">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="code" column="code" type="string" unique="false" nullable="false" />
        <field name="createdAt" column="created_at" type="datetime" unique="false" nullable="true"/>

        <many-to-one field="vendor" target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\VendorInterface" inversed-by="productListings"/>

        <one-to-many field="productDrafts" target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\ProductListing\ProductDraftInterface" mapped-by="productListing">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

        <many-to-one field="product" target-entity="Sylius\Component\Product\Model\ProductInterface">
            <join-column name="product_id" referenced-column-name="id" nullable="true"/>
        </many-to-one>

        <indexes>
            <index name="code" columns="code" />
        </indexes>
    </mapped-superclass>
</doctrine-mapping>
