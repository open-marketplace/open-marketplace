<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\Vendor" table="bitbag_vendor">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="companyName" column="company_name" type="text" />
        <field name="taxIdentifier" column="tax_identifier" type="text" />
        <field name="phoneNumber" column="phone_number" type="text" />
        
        <one-to-one field="vendorAddress" target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\VendorAddress" >
            <join-column name="vendor_address_id" referenced-column-name="id" on-delete="SET NULL" />
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-one>      
        
        <one-to-one field="user" target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\ShopUser" inversed-by="vendor">
            <join-column name="user_id" referenced-column-name="id" />
        </one-to-one>
    </mapped-superclass>
</doctrine-mapping>
