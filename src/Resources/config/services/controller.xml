<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\VendorProfileUpdateAction"
                 id="bitbag.sylius_multi_vendor_marketplace_plugin.controller.vendor_profile_update_action">                    
            <argument type="service" id="request_stack"/>
            <argument type="service" id="bitbag.sylius_multi_vendor_marketplace_plugin.vendor_profile_updater.vendor_profile_updater"/>
            <argument type="service" id="bitbag.sylius_multi_vendor_marketplace_plugin.vendor_provider.vendor_provider"/>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="router"/>
            <argument type="service" id="bitbag.sylius_multi_vendor_marketplace_plugin.factory.vendor_factory"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\ConfirmProfileUpdateAction"
                 id="bitbag.sylius_multi_vendor_marketplace_plugin.controller.confirm_profile_update_action">
            <argument type="service" id="doctrine.orm.default_entity_manager" />    
            <argument type="service" id="bitbag.sylius_multi_vendor_marketplace_plugin.vendor_profile_updater.vendor_profile_updater"/>
            <argument type="service" id="security.helper"/>
            <argument type="service" id="router"/>
            <tag name="controller.service_arguments"/>
        </service>
        
        <service class="BitBag\SyliusMultiVendorMarketplacePlugin\Controller\VendorController"
                 id="bitbag.sylius_multi_vendor_marketplace_plugin.controller.vendor_controller"           
                 parent="bitbag_sylius_multi_vendor_marketplace_plugin.controller.vendor">
            <argument type="service" id="bitbag.sylius_multi_vendor_marketplace_plugin.vendor_provider.vendor_provider" />
        </service>        
    </services>
</container>
