<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="bitbag_mvm_plugin.repository.product_translation" class="BitBag\OpenMarketplace\Repository\ProductListing\ProductTranslationRepository">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service">
                <service class="Doctrine\ORM\Mapping\ClassMetadata">
                    <argument>BitBag\OpenMarketplace\Entity\ProductListing\ProductListing</argument>
                    <factory service="doctrine.orm.entity_manager" method="getClassMetadata"/>
                </service>
            </argument>
        </service>
    </services>
</container>
