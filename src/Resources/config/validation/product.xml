<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    <class name="BitBag\OpenMarketplace\Entity\ProductListing\ProductDraft">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">code</option>
            <option name="message">sylius.product.code.unique</option>
            <option name="groups">sylius</option>
        </constraint>
        <property name="code">
            <constraint name="Length">
                <option name="min">2</option>
                <option name="minMessage">sylius.product.name.min_length</option>
                <option name="max">255</option>
                <option name="maxMessage">sylius.product.name.max_length</option>
                <option name="groups">sylius</option>
            </constraint>
            <constraint name="NotBlank">
                <option name="message">sylius.product.code.not_blank</option>
                <option name="groups">sylius</option>
            </constraint>
            <constraint name="Regex">
                <option name="message">sylius.product.code.regex</option>
                <option name="pattern">/^[\w-]*$/</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>

        <property name="price">
            <constraint name="Positive">
                <option name="groups">sylius</option>
            </constraint>
        </property>

        <property name="attributes">
            <constraint name="Valid" />
        </property>

        <property name="translations">
            <constraint name="Valid" />
        </property>
    </class>
</constraint-mapping>
